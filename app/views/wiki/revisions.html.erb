<h1><%= t(:revisions) %></h1>

<%= render 'menu', :no_edit => true %>

<% if(@revisions.length > 0) %>
  <ul>
  <% @revisions.each do |revision| %>
    <li>
      <% if (params[:id].nil?) %>
      <% url = edit_wiki_index_url(@project, :revision => revision) %>
    <% else %>
      <% url = edit_wiki_page_url(@project, :revision => revision) %>
    <% end %>
      <%= link_to revision, url %>
      - <%= revision.message %>
      - <%= time_ago_in_words revision.date.to_time %> <%= t(:ago) %>
      - <%= revision.author.name %>
    </li>
  <% end %>
  </ul>
<% else %>
  <p><%= t(:there_are_no_revisions) %></p>
<% end %>

